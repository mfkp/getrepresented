<h1>New Response</h1>

<%= form_for(@response) do |f| %>
  <%= f.error_messages %>
  <p>
    <%= f.label :response %><br />
    <%= f.text_area :response %>
  </p>
  <%= f.hidden_field :member_id, :value => current_member.id %>
  <%= f.hidden_field :post_id, :value => @post_id %>
  <p>
    <%= f.submit 'Create' %>
  </p>
<% end %>

<%= link_to 'Back', posts_path %>
