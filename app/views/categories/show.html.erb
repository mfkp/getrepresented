<% title "Category: " + @category.name %>
<ul id="crumbs">
	<li><%= link_to "Home", :controller => 'posts', :action => 'index', :subdomain => 'www' %></li>
	<li><%= link_to "Categories", :controller => 'categories', :action => 'index', :subdomain => 'www' %></li>
	<li><%= @category.name %></li>
</ul>
<ul>
<% @categoryposts.each do |post| %>
	<li><%= link_to post.title, :controller => 'posts', :action => 'show', :id => post.id %></li>
<% end %>
</ul>
<% if @categoryposts.empty? %>
	There are currently no posts in this category.
<% end %>