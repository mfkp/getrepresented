<% title @member.title + ". " + @member.last_name %>
<p>
    <b>Name:</b>
    <%=h @member.first_name %> <%=h @member.last_name %>
</p>
<p>
    <b>Email:</b>
    <%=h @member.email %>
</p>
<p>
    <b>Profile:</b>
    <%=h @member.profile %>
</p>
<% if current_member %>
<% if current_member.id == @member.id %>
	<%= link_to 'Edit My Profile', edit_member_path(@member) %><br/>
	<%= link_to 'View My Public Profile', :controller => 'posts', :action => 'index', :subdomain => @member.first_name + @member.last_name %>
<% end %>
<% end %>