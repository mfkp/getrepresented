<% title "New post" %>

<% form_for(@post) do |f| %>
  <%= f.error_messages %>
<% if @petition_mode %>
  <p>
    <%= f.label :title %><br />
    <%= f.text_field :title, :value => "Petition for " + @members[0][0] + " to join" %>
  </p>
  <h3>Which Congress Member?</h3>
  <p>
	<%= select("post", "member_id", @members) %>
  </p>
  <h3>Type of Post</h3>
  <p>
	<%= select("post", "type_id", @types) %>
  </p>
  <p>
    <%= f.label :body, "Comments" %><br />
    <%= f.text_area :body %>
  </p>
  <%= f.hidden_field :created_by, :value => current_user.id %>
  <p>
    <%= f.submit 'Sign Petition' %>
  </p>
<% else %>
  <p>
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </p>
  <h3>Which Congress Member?</h3>
  <p>
	<%= select("post", "member_id", @members) %>
  </p>
  <h3>Type of Post</h3>
  <p>
	<%= select("post", "type_id", @types) %>
  </p>
  <h3>Category</h3>
  <p>
	<%= select("post", "category_id", @categories) %>
  </p>
  <p>
    <%= f.label :body %><br />
    <%= f.text_area :body %>
  </p>
  <%= f.hidden_field :created_by, :value => current_user.id %>
  <p>
    <%= f.submit 'Create' %>
  </p>
<% end %>
<% end %>

<%= link_to 'Back', posts_path %>