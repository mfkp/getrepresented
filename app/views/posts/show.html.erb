<p>
    <b>Title:</b>
    <%=h @post.title %>
</p>
<p>
    <b>Body:</b>
    <%=h @post.body %>
</p>
<%= link_to 'Edit', edit_post_path(@post) %> |<%= link_to 'Back', posts_path %>

<!--display a response if it exists-->
<hr> <h4>Responses</h4>
<ul>
	<% @post.responses.each do |response| %>
	<li>
		<%= h response.response %>
		<br>
		<div class = "dateline">
			By <%= @members.find(response.member_id) %><br>
			Posted on <%= response.created_at.strftime("%B %d, %Y at %I:%M %p") %>
		</div>
		</li>
	<% end %>
</ul>
		
<!--display all comments-->
<hr><h4>Comments</h4>
<ul>
    <% @post.comments.each do |comment| %>
	    <li>
	        <%= h comment.comment %>
	        <br>
	        <div class = "dateline">
	            Posted on <%= comment.created_at.strftime("%B %d, %Y at %I:%M %p") %>
	        </div>
	    </li>
    <% end %>
</ul>

<!-- if logged in, show the comment form -->
<% if current_user %>
	<% form_for(:comment, :url => post_comments_path(@post)) do |f| %>
		<p>
		    Comment:<br/>
		    <%= f.text_area :comment %>
		</p>
		<%= f.submit "Add Comment" %>
	<% end %>
<% end %>